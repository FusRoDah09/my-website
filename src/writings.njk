---
layout: layout.njk
title: Writings
---

<div class="writings-container">
    <div class="writings-main">
        <h1>Writings</h1>
        
        <ul class="post-list">
        {% for post in collections.writings %}
            <li>
                <span class="post-date">{{ post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</span> - 
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
        {% endfor %}
        </ul>
    </div>
    
    <aside class="writings-sidebar">
        <h2>Blog Archive</h2>
        {% set groupedPosts = collections.writings | groupByMonthYear %}
        {% for month, posts in groupedPosts %}
        <div class="archive-item">
            <div class="archive-month-header" onclick="this.parentElement.classList.toggle('expanded')">
                <span class="archive-arrow">â–¶</span>
                <span class="archive-month-name">{{ month }}</span>
                <span class="archive-count">({{ posts.length }})</span>
            </div>
            <ul class="archive-posts">
            {% for post in posts %}
                <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
            {% endfor %}
            </ul>
        </div>
        {% endfor %}
    </aside>
</div>