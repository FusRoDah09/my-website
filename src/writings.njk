<h1>Writings</h1>

<div class="search-container">
    <script async src="https://cse.google.com/cse.js?cx=5454e8328ca314d4e"></script>
    <div class="gcse-search"></div>
</div>

<ul class="post-list">
{% for post in collections.writings %}
    <li>
        <span class="post-date">{{ post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</span> - 
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
{% endfor %}
</ul>