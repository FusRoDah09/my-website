---
layout: layout.njk
title: Writings
---

<div class="writings-container">
    <div class="writings-main">
        <h1>Writings</h1>
        
        <ul class="post-list">
        {% for post in collections.writings %}
            <li>
                <span class="post-date">{{ post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</span> - 
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
        {% endfor %}
        </ul>
    </div>
    
    <aside class="writings-sidebar">
        <h2>Blog Archive</h2>
        {% set groupedByYear = collections.writings | groupByYear %}
        {% for year, months in groupedByYear %}
        <div class="archive-year">
            <div class="archive-year-header" onclick="this.parentElement.classList.toggle('expanded')">
                <span class="archive-arrow">▶</span>
                <span class="archive-year-name">{{ year }}</span>
            </div>
            <div class="archive-months">
                {% for month, posts in months %}
                <div class="archive-month">
                    <div class="archive-month-header" onclick="event.stopPropagation(); this.parentElement.classList.toggle('expanded')">
                        <span class="archive-arrow">▶</span>
                        <span class="archive-month-name">{{ month }}</span>
                        <span class="archive-count">({{ posts.length }})</span>
                    </div>
                    <ul class="archive-posts">
                    {% for post in posts %}
                        <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
                    {% endfor %}
                    </ul>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </aside>
</div>